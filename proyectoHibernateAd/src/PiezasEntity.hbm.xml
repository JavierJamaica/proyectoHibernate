<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Entidades.PiezasEntity" table="piezas" schema="proyectohibernate">
        <id name="idPiezas">
            <column name="idPiezas" sql-type="int"/>
        </id>
        <property name="nombrePieza">
            <column name="nombrePieza" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="precioPieza">
            <column name="precioPieza" sql-type="double" precision="-1"/>
        </property>
        <property name="descripcionPieza">
            <column name="descripcionPieza" sql-type="varchar(80)" length="80"/>
        </property>
    </class>
</hibernate-mapping>